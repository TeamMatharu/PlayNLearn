<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.playnlearn"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gamelogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name=".MusicService"
            android:enabled="true" >
        </service>

        <activity
            android:name=".SelectionActivity"
            android:label="@string/title_activity_selection"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewProfileActivity"
            android:label="@string/title_activity_new_profile"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".ProfilequestionActivity" >
        </activity>
        <activity
            android:name=".Progressbar2Activity"
            android:label="@string/title_activity_progressbar2"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ProfileList"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ResultCardActivity"
            android:label="@string/title_result_card"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GuestquestionActivity"
            android:label="@string/title_activity_guestquestion"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UserListActivity"
            android:label="@string/title_activity_user_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".InviteFriendActivity"
            android:label="@string/title_activity_user_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GameSetting"
            android:label="@string/title_activity_game_setting" >
        </activity>
    </application>

</manifest>
