<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.playnlearn.Instruction" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/gamelogo" />
              
          <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions" android:textColor="#b50011"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="28sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to PlayNLearn insrtuction page. Use your brain to get as far as you can in this game."
                android:textColor="#1C1C1C"
                android:textSize="14sp" />
            
             <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In this app user should be able to play game as a guest/profile. If user wants to play the full version of our game than user have to create their profile first and start the game with your own profile. If the user select game as a guest than the user will not able to a play full game because as a guest we will give you only 50 questions."
                android:textColor="#1C1C1C"
                android:textSize="14sp" />
             
             <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A mistake can be a big time waste in the advanced levels. Hope everyone will enjoy our PlayNLearn app."
                 android:textColor="#1C1C1C"
                android:textSize="14sp" />
            
            <Button
                android:id="@+id/btnok"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@drawable/buttongradientorange"
                android:text="OK"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>
        </ScrollView>
</RelativeLayout>